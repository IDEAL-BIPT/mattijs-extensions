FoamFile
{
    version     2.0;
    format      ascii;
    class       pointScalarField;
    object      pointField;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    movingWall
    {
        type    codedFixedValue;
        value   $internalField;

        name    rampedFixedValue;   // name of generated bc

        code
        #{
            operator==
            (
                min(10, 0.1*this->db().time().value())
            );
        #};
    }

    fixedWalls
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}

